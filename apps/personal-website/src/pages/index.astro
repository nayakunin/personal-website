---
import BaseHead from "../components/BaseHead.astro";
import { SITE_TITLE, SITE_DESCRIPTION } from "../config";
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
  </head>
  <body>
    <main>
      <div class="grid place-items-center h-screen">
        <div class="flex flex-col gap-y-2">
          <p class="text-xl text-gray-400">Hi! My name is</p>
          <h1 class="text-8xl">Nikita Iakunin</h1>
          <p class="text-2xl"><span class="text-gray-400">I am a</span> <code class="inline">Fullstack developer (React/Go)</code></p>
        </div>
        <a
          href="/resume"
          class="text-blue-600 dark:text-blue-500 hover:underline">Check out my resume -&gt;</a
        >
      </div>
    </main>
  </body>
</html>
