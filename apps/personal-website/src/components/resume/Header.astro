---
import { personalInfo, work } from "shared";
---

<header class="flex justify-between">
  <div>
    <h1 class="text-3xl font-bold">{personalInfo.getName("full")}</h1>
    <h2 class="text-xl">{work.position}</h2>
  </div>
  <div class="text-right">
    <p>
      <a class="underline" href={`tel:${personalInfo.contacts.phone}`}
        >{personalInfo.contacts.phone}</a
      >
    </p>
    <p>
      <a class="underline" href={`mailto:${personalInfo.contacts.email}`}
        >{personalInfo.contacts.email}</a
      >
    </p>
    <p>{personalInfo.address.city}, {personalInfo.address.country}</p>
    <p>
      <a class="underline" href={`https://t.me/${personalInfo.contacts.tg}`}
        >Telegram</a
      >
    </p>
    <p>
      <a class="underline" href={personalInfo.contacts.linkedinLink}>LinkedIn</a
      >
    </p>
  </div>
</header>
